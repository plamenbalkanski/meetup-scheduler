generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MeetUp {
  id          String       @id @default(cuid())
  title       String
  description String?
  address     String?
  createdAt   DateTime     @default(now())
  createdBy   String
  responses   Response[]
  timeSlots   TimeSlot[]
  expiresAt   DateTime?
  useTimeRanges Boolean    @default(true)
}

model TimeSlot {
  id        String     @id @default(cuid())
  meetUpId  String
  meetUp    MeetUp     @relation(fields: [meetUpId], references: [id])
  startTime DateTime
  endTime   DateTime
  responses Response[]
}

model Response {
  id         String    @id @default(cuid())
  meetUpId   String
  meetUp     MeetUp    @relation(fields: [meetUpId], references: [id])
  name       String
  timeSlots  TimeSlot[]
  createdAt  DateTime  @default(now())
}

model RateLimit {
  id         String   @id @default(cuid())
  identifier String   // email or IP address
  type       String   // 'email' or 'ip'
  count      Int      @default(0)
  month      Int
  year       Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, type, month, year])
  @@index([identifier, type, month, year])
}

model UpgradeAnalytics {
  id        String   @id @default(cuid())
  type      String   // 'PAGE_VIEW' or 'INTEREST'
  email     String?
  ip        String
  createdAt DateTime @default(now())

  @@index([type])
  @@index([createdAt])
} 